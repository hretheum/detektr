[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache
per-file-ignores =
    __init__.py:F401
    tests/*:S101
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503   # line break before binary operator
