# Copy this file to .env and fill in your values
# NEVER commit .env file to repository!

# Camera Configuration
CAMERA_IP=192.168.1.100
CAMERA_USERNAME=admin
CAMERA_PASSWORD=your_camera_password_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/detektor
POSTGRES_USER=detektor
POSTGRES_PASSWORD=changeme

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=changeme

# LLM APIs (choose one or both)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Home Assistant
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_long_lived_access_token_here

# MQTT
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=mqtt_password

# Monitoring
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development
GPU_DEVICE=0

# Cost Control
DAILY_LLM_BUDGET_USD=5.00
MAX_TOKENS_PER_REQUEST=1000

# Telegram Alerts
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Alert Thresholds
DISK_ALERT_THRESHOLD=80
REDIS_MEMORY_THRESHOLD_GB=3.5
POSTGRES_DISK_THRESHOLD_GB=80
