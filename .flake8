[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    services/*/src/shared
per-file-ignores =
    __init__.py:F401
    src/shared/kernel/events/base.py:B024
    src/shared/telemetry/decorators.py:E501
    src/shared/telemetry/correlation.py:B010
    src/shared/telemetry/frame_tracking.py:D202
